@model StaffUpdateViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Personel Düzenle</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .appbar, .edit-container, .footer {
            margin-bottom: 15px;
        }

        .appbar {
            text-align: center;
            background-color: #2c3e50;
            color: #ecf0f1;
            padding: 20px 0;
        }

            .appbar button {
                padding: 10px 20px;
                border: none;
                background-color: #e74c3c;
                color: #fff;
                border-radius: 4px;
                cursor: pointer;
            }

        .edit-container {
            margin-top: 20px;
            max-width: 800px;
            padding: 15px;
            margin-left: auto;
            margin-right: auto;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .edit-container img {
                width: 150px;
                height: 150px;
                border-radius: 50%;
                display: block;
                margin-left: auto;
                margin-right: auto;
                margin-bottom: 15px;
            }

        label {
            font-weight: bold;
            display: block;
            margin-top: 10px;
        }

        input[type="text"],
        input[type="date"],
        input[type="email"],
        select,
        textarea {
            width: 100%;
            margin-bottom: 10px;
            padding: 8px;
            border-radius: 4px;
            background-color: #f9f9f9;
            border: 1px solid #e0e0e0;
            page-break-inside: avoid;
        }

        .footer {
            text-align: center;
            padding: 20px 0;
            width: 100% !important;
        }

            .footer img {
                max-width: 100px;
            }

        /* Kaydet butonunun stilini ayarlandı */
        button[type="submit"] {
            padding: 10px 20px;
            border: none;
            background-color: #2c3e50;
            color: #ecf0f1;
            border-radius: 4px;
            cursor: pointer;
        }

        /* Submit butonunu ortalandı */
        .submit-btn-container {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>

<body>


    <div class="appbar">
        <h1>Personel Düzenle</h1>
        <button onclick="location.href='Personel.html'">Geri Dön</button>
    </div>

    <div class="edit-container">
        <form asp-action="Create" method="POST">
            <input type="hidden" name="@Model.UpdateStaff.Id" value="@Model.UpdateStaff.Id"> <!-- Düzenlenecek personelin ID'si -->

            <label>Çalışan Adı:</label>
            <input type="text" name="ad" value="@Model.UpdateStaff.FirstName">
            <label>Çalışan Soyadı:</label>
            <input type="text" name="Soyaf" value="@Model.UpdateStaff.LastName">

            <label>Çalışan TC No:</label>
            <input type="text" name="tc_no" value="@Model.UpdateStaff.Tc">

            <label>Doğum Tarihi:</label>
            <input type="date" name="dogum_tarihi" value="@Model.UpdateStaff.Birthday">

            <label>Unvan:</label>
            <input type="text" name="unvan" value="@Model.UpdateStaff.Title">

            <label>Çalışan Telefon No 1:</label>
            <input type="text" name="telefon1" value="@Model.UpdateStaff.Phone1">

            <label>Çalışan Telefon No 2:</label>
            <input type="text" name="telefon2" value="@Model.UpdateStaff.Phone2">

            <label>E-mail:</label>
            <input type="email" name="email" value="@Model.UpdateStaff.Email">

            <label asp-for="UpdateStaff.GenderName" class="control-label">Gender:</label>
            <select asp-for="UpdateStaff.GenderName" asp-items="Model.GenderList" class="form-control">
                <option value="">Select Gender</option>
            </select>
            <span asp-validation-for="UpdateStaff.GenderName" class="text-danger"></span>

            <label>İşe Başlama Tarihi:</label>
            <input type="date" name="ise_baslama_tarihi" value="@Model.UpdateStaff.StartingDate">

            <label>İşten Çıkış Tarihi:</label>
            <input type="date" name="isten_cikis_tarihi" value="@Model.UpdateStaff.EndingDate">

            <label asp-for="UpdateStaff.DepartmentName" class="control-label">Departmanı:</label>
            <select asp-for="UpdateStaff.DepartmentName" asp-items="Model.DepartmentList" class="form-control">
                <option value="">Select Department</option>
            </select>
            <span asp-validation-for="UpdateStaff.DepartmentName" class="text-danger"></span>

            <label>Adres:</label>
            <textarea name="adres">@Model.UpdateStaff.Address</textarea>

            <button type="submit">Kaydet</button>
        </form>
    </div>
</body>

</html>
